# =============================================================================
# Project Progress DB Worker - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp env.template .env
# =============================================================================

# -----------------------------------------------------------------------------
# Google Cloud Configuration
# -----------------------------------------------------------------------------
# Your GCP project ID
PROJECT_ID=your-gcp-project-id

# BigQuery dataset name
BIGQUERY_DATASET=project_progress_db

# GCP region for Vertex AI
REGION=asia-northeast1

# -----------------------------------------------------------------------------
# Vertex AI Configuration
# -----------------------------------------------------------------------------
# Gemini model name (for AI extraction)
GEMINI_MODEL=gemini-1.5-flash-001

# -----------------------------------------------------------------------------
# Local Development Options
# -----------------------------------------------------------------------------
# Port to run the worker on
PORT=8081

# Use local SQLite instead of BigQuery (true/false)
USE_LOCAL_DB=true

# Use local file storage instead of GCS (true/false)
USE_LOCAL_STORAGE=true

