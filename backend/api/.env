# API Service Environment Variables

# Local Development Mode
USE_LOCAL_DB=true
USE_LOCAL_STORAGE=true

# GCP Configuration (not needed in local mode)
PROJECT_ID=local-dev
BIGQUERY_DATASET=project_progress_db
PUBSUB_TOPIC=upload-events

# OAuth & JWT (from Secret Manager in production)
OAUTH_CLIENT_ID=not-needed-in-dev
OAUTH_CLIENT_SECRET=not-needed-in-dev
JWT_SECRET_KEY=dev-secret-key-change-in-production

# Application Configuration
ENVIRONMENT=dev
FRONTEND_URL=http://localhost:3000
ALLOWED_OAUTH_DOMAINS=

# Server Configuration
PORT=8000
