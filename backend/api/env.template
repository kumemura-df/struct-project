# =============================================================================
# Project Progress DB API - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp env.template .env
# =============================================================================

# -----------------------------------------------------------------------------
# Google Cloud Configuration
# -----------------------------------------------------------------------------
# Your GCP project ID
PROJECT_ID=your-gcp-project-id

# BigQuery dataset name
BIGQUERY_DATASET=project_progress_db

# Pub/Sub topic for async processing
PUBSUB_TOPIC=upload-events

# GCP region
REGION=asia-northeast1

# Environment (dev, staging, prod)
ENVIRONMENT=dev

# -----------------------------------------------------------------------------
# OAuth Configuration
# -----------------------------------------------------------------------------
# Google OAuth Client ID (from Google Cloud Console)
# Create at: https://console.cloud.google.com/apis/credentials
OAUTH_CLIENT_ID=your-oauth-client-id.apps.googleusercontent.com

# Google OAuth Client Secret
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# JWT secret key for session tokens
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-jwt-secret-key-change-this

# Allowed OAuth domains (comma-separated, empty allows all)
# Example: example.com,company.org
ALLOWED_OAUTH_DOMAINS=

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
# Frontend URL for CORS and OAuth redirects
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Local Development Options
# -----------------------------------------------------------------------------
# Use local SQLite instead of BigQuery (true/false)
USE_LOCAL_DB=true

# Use local file storage instead of GCS (true/false)
USE_LOCAL_STORAGE=true

# -----------------------------------------------------------------------------
# Optional: Vertex AI Configuration (for worker integration testing)
# -----------------------------------------------------------------------------
# GCP region for Vertex AI
# VERTEX_AI_REGION=asia-northeast1

# Gemini model name
# GEMINI_MODEL=gemini-1.5-flash-001

