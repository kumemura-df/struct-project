# Project Configuration
PROJECT_ID=your-gcp-project-id
REGION=asia-northeast1
ENVIRONMENT=dev

# BigQuery
BIGQUERY_DATASET=project_progress_db

# Pub/Sub
PUBSUB_TOPIC=upload-events

# OAuth Configuration (Get from Google Cloud Console)
OAUTH_CLIENT_ID=your-oauth-client-id.apps.googleusercontent.com
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# JWT Configuration (Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))")
JWT_SECRET_KEY=your-jwt-secret-key-here

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Allowed OAuth domains (comma-separated, leave empty to allow all)
ALLOWED_OAUTH_DOMAINS=

# AI Model Configuration
GEMINI_MODEL=gemini-1.5-flash-001

# Local Development Only
# Cloud Storage bucket name
GCS_BUCKET=${PROJECT_ID}-meeting-notes-raw

# Local development mode (set to true for SQLite instead of BigQuery)
USE_LOCAL_DB=false
USE_LOCAL_STORAGE=false

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=

# Port configuration
API_PORT=8000
WORKER_PORT=8080
FRONTEND_PORT=3000
